---
import Layout from '../layouts/Layout.astro';
import { t } from '../i18n/translations.js';
import GradientBanner from '../components/GradientBanner.astro';
import ImageOverlaySection from '../components/ImageOverlaySection.astro';
import type { ContentItem } from '../components/ImageOverlaySection.astro';
import CoreTopics from '../components/CoreTopics.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';

const locale = 'zh';

// 论坛简介 cards
const forumIntroCards = [
  {
    title: '全球对话平台',
    content: 'GOSIM 联合全法中国青年科创办会发起人工智能愿景论坛，聚焦这一关键问题："当人工智能重塑人类角色，我们如何确保人类核心价值在AI时代仍居于中心？"'
  },
  {
    title: '思考者和实践者',
    content: '论坛采用邀请制、非公开、小规模的深度交互机制，汇聚全球顶尖高校、研究机构及企业代表，聚焦教育革新、文化创造、情感陪伴、技术平权等关键领域。'
  }
];

// 论坛目标 cards
const forumGoalsCards = [
  {
    title: '全球汇聚',
    content: '汇聚全球顶尖高校、研究机构及企业代表',
    icon: 'fa-globe-americas'
  },
  {
    title: '深度交流',
    content: '邀请制、非公开、小规模的深度交互机制',
    icon: 'fa-lock'
  },
  {
    title: '人文关怀',
    content: '关注AI在人类体验维度的正向价值',
    icon: 'fa-heart'
  },
  {
    title: '平衡发展',
    content: '探讨功能性与伦理性、效率与温度的平衡',
    icon: 'fa-balance-scale'
  }
];

// 核心参会群体 cards
const participantCards = [
  {
    title: '学术和教育机构',
    content: '认知科学教授、教育学专家、伦理学研究者、学校校长、教育政策研究者，聚焦认知科学、教育革新与伦理研究'
  },
  {
    title: '技术社区和产业代表',
    content: '大模型科学家、开源社区负责人、AI公司高管、创新企业创始人、投资人，推动技术创新与产业落地'
  },
  {
    title: '政策与伦理专家',
    content: '政府科技顾问、数字政策专家、AI产业创新研究员、治理研究员、法律专家，构建政策制定、伦理治理与法律框架'
  },
  {
    title: '艺术与人文学者',
    content: '数字艺术家、作家与文学创作者、博物馆创新负责人、出版机构负责人、文化研究学者，推动文化创造、艺术创新与人文价值'
  }
];

// 预期成果 cards
const expectedOutcomesCards = [
  {
    title: '三元融合范式',
    content: '构建 "科技 + 人文 + 治理" 三元融合的论坛范式，搭建全球性产业、学术、开源社区及国际 AI 治理组织的持续对话平台，为人本人工智能的可持续发展注入思想动能。'
  },
  {
    title: 'AIGC Spotlight机制',
    content: '设立 AI 内容创作与交互创新的常设展示机制，逐步组建专业国际评委会，助力获奖项目对接产业合作伙伴及投资机构，为创意落地提供全链条支持。'
  },
  {
    title: '《人本人工智能白皮书》全球发布',
    content: '依托论坛研讨成果及对参会嘉宾的深度访谈，《人本人工智能白皮书》正式面向开源社区、国际 AI 治理组织及 AI 产业全球发布。我们诚挚期待更多思想者与实践者加入人本人工智能的探讨行列，共同推动这一领域的深入发展。'
  }
];

// 国际合作 cards
const internationalCooperationCards = [
  {
    title: '跨界交融',
    content: '产业、学术、开源的深度对话平台',
    icon: 'fa-bridge-circle-check'
  },
  {
    title: '全球共识',
    content: '人本人工智能的全球共识与合作',
    icon: 'fa-flag'
  },
  {
    title: '伦理思辨',
    content: '伦理与技术的激烈碰撞',
    icon: 'fa-scale-balanced'
  }
];

// 论坛背景内容
const forumBackgroundContent: ContentItem[] = [
  {
    type: 'paragraph',
    content: 'GOSIM 全球开源创新汇始终坚守开源精神内核 —— 以开放包容为底色、以全球协作为纽带、以社区驱动为动力。基于这一理念，我们联合多方力量共同发起 AI Vision Forum。'
  },
  {
    type: 'section',
    title: '打开下一代文明之门：科技狂飙与人文守望',
    className: 'tech-evolution-section'
  },
  {
    type: 'paragraph',
    content: '近年来，大语言模型（LLM）、生成式 AI 及智能体等技术迅猛迭代，在人类曾独占的高智力任务领域，从数学证明、代码编写到文学写作、艺术创作，顶级 AI 模型不断突破性能边界，刷新着人们对机器智能的认知。'
  },
  {
    type: 'paragraph',
    content: '这种突破在人类社会激起复杂涟漪：一方面仿佛人类已找到破解宇宙奥秘、打开下一代文明之门的钥匙；另一方面，当 AI 在 "人类专属" 的智力高地持续突进，人们也深深忧虑：人类独特的创造力、情感感知力是否会被取代？'
  }
];

---

<Layout title="GOSIM AI Vision Forum 2025" lang="zh">

	<main class="main-flex-container">
		<!-- Hero Section -->
		<div data-nav-theme="dark">
			<Hero lang="zh" />
		</div>

		<!-- Forum Introduction Section -->
		<GradientBanner 
			title="论坛简介"
			subtitle="聚焦AI核心价值创造"
			sectionClass="introduction"
			cards={forumIntroCards}
			columns={2}
			cardClass="content-card"
			cardTitleSize="1.2rem"
			backgroundImage="/hangzhou.svg"
		/>

		<!-- Forum Background Section -->
		<ImageOverlaySection 
			id="forum-background"
			sectionClass="fullwidth-section no-shadow"
			title="论坛背景"
			image="/forum-intro.png"
			imageAlt="Forum Background"
			highlightTitle="当AI重塑人类角色，如何确保人类核心价值在 AI 时代始终居于首位?"
			content={forumBackgroundContent}
			backgroundColor="#f8f9fa"
			padding="4rem 0"
			titleAlign="left"
			titleColor="#1a202c"
			titleSize="2rem"
			titleWeight="700"
			containerMaxWidth="100%"
		/>



		<!-- Forum Objectives Section -->
		<GradientBanner 
			title="论坛目标"
			titleAlign="left"
			titleColor="#ffffff"
			titleSize="1.8rem"
			cardTitleSize="1.2rem"
			sectionClass="agenda-section"
			cards={forumGoalsCards}
			columns={4}
			cardClass="goal-item"
			backgroundImage="/origination.svg"
			gridClass="goals-grid"
			cardContentSize="1rem"
			cardContentLineHeight="1.4"				
		/>

		<!-- Core Philosophy Section -->
		<div data-nav-theme="light">
			<ImageOverlaySection 
				id="core-philosophy"
				sectionClass="core-philosophy-section"
				title="核心理念"
				image="/arch-bridge.png"
				imageAlt="Arch Bridge"
				layoutType="two-column"
				leftContent="从「工具使能」到「价值导向」"
				rightContent="我们倡导一种范式跃迁：让AI不仅仅是技术赋能工具，更要结果导向，有效回应和解决人类核心关切。我们相信，真正有意义的AI应该能够理解人类的情感需求，尊重文化多样性，促进社会公平，并在教育、医疗、艺术创作等领域发挥积极作用。通过这种价值导向的发展模式，AI将成为人类文明进步的重要推动力量，而不仅仅是冰冷的计算工具。"
				backgroundColor="#f8f9fa"
				overlayType="bottom-boxes"
			/>
		</div>



		<!-- Participant Categories Section -->
		<GradientBanner 
			title="核心参会群体"
			titleColor="#ffffff"
			sectionClass="outcomes-section participants-gradient"
			id="participants-section"
			columns={4}
			cards={participantCards}
			backgroundImage="/xiangji.svg"
			gridClass="outcomes-grid outcomes-grid-4"
			titleAlign="left"
			cardTitleSize="1.2rem"
			cardContentSize="1rem"
			cardContentLineHeight="1.4"				
		/>

		<!-- Core Topics Section -->
		<CoreTopics />

		<!-- International Cooperation Section -->
		<GradientBanner 
			title="国际合作"
			titleAlign="center"
			titleColor="#ffffff"
			sectionClass="international-cooperation-section"
			cards={internationalCooperationCards}
			columns={3}
			cardClass="cooperation-card"
			gridClass="cooperation-grid"
			backgroundImage="/heyi.svg"
			cardTitleSize="1.2rem"
			cardContentSize="1rem"
			cardContentLineHeight="1.4"				
		/>

		<!-- AIGC Spotlight Section -->
		<ImageOverlaySection 
			id="aigc-spotlight"
			sectionClass="section-block modern-block no-shadow"
			title="AIGC Spotlight 双单元展示"
			image="/artist-in-forest.png"
			imageAlt="AIGC Spotlight"
			layoutType="two-column"
			leftContent="技术产品 × 艺术创意"
			rightContent="在活动设计上，论坛特设「技术产品」与「艺术创意」双单元 AIGC Spotlight 全球作品展示，旨在构建跨越技术逻辑与人文视角的思想共同体。通过这一创新形式，我们将技术的理性与艺术的感性相结合，展现AI在不同领域的创造潜力，推动跨界思维的碰撞与融合。"
			backgroundColor="transparent"
			padding="4rem 0"
			titleAlign="left"
			titleColor="#1a202c"
			titleSize="2rem"
			titleWeight="700"
			overlayType="bottom-boxes"
		/>


		<!-- Expected Outcomes Section -->
		<GradientBanner 
			title="预期成果"
			titleColor="#ffffff"
			sectionClass="outcomes-section"
			cards={expectedOutcomesCards}
			gridClass="outcomes-grid"
			cardClass="outcome-card white-text"
			cardTitleSize="1.1rem"
			cardContentSize="0.9rem"
			backgroundImage="/lingyin-temple.jpg"
			disableGradientOverlay={true}
		/>
	</main>

	<Footer />
</Layout>

